@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<section id="content">
    <div class="content-wrap">
        <div class="container clearfix">

            <div class="heading-block center nobottomborder">
                <h2><span style="color: orange;">Top</span> Products</h2>
                <span>Check out some of the most popular DigitalX products below.</span>
            </div>

            <div id="shop" class="shop grid-container clearfix" data-layout="fitRows">
                @foreach (var item in Model)
                {
                    <div class="product clearfix">
                        <div class="product-image">
                            <a href="@Url.Action("Details", "Products", new { id = item.ProductID })">
                                <img src="data:image/png;base64,@Convert.ToBase64String(item.Picture, Base64FormattingOptions.None)" alt="Image" />
                            </a>
                        </div>
                        <br />
                        <div class="product-title"><h3>@item.ProductName</h3></div>
                        <div class="product-price">$@item.Price</div>
                        <a href="@Url.Action("Buy", "Cart", new { id = item.ProductID })" class="button button-border button-rounded button-fill button-aqua">
                            <span>Add to Cart</span>
                        </a>
                    </div>
                    @*<br />
                    <br />*@
                }
            </div>
        </div>
    </div>
</section>